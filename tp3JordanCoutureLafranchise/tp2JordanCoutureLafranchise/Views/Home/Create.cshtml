@model tp2JordanCoutureLafranchise.Models.Parent

@{
    ViewData["Title"] = "Create";
}


<div style="background: linear-gradient(180deg, #303030 0%, #8B542A 52.16%, #000000 113.66%);">
    <div style="padding:30px;">
        <h1 style="color:white;">Créer une équipe</h1>


        <hr />
        <div class="row">
            <div class="col-md-4 ">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*    <input asp-for="ParentId" class="form-control" hidden />*@
                    <div class="form-group " style="color:white;">
                        <label asp-for="Nom" class="control-label"></label>
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label" style="color:white;"></label>
                        <textarea id="summernote" asp-for="Description" class="form-control"></textarea>

                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:30px;">
                        <label asp-for="ImageURL" class="control-label" style="color:white;"></label>
                        <input asp-for="ImageURL" class="form-control" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


