@model tp2JordanCoutureLafranchise.Models.Enfant

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-bottom:0px; background: linear-gradient(180deg, #303030 0%, #8B542A 52.16%, #000000 113.66%);">
    <h1 style="color:darkorange">Supprimer un joueur</h1>

    <h3 style="color:white">Êtes vous certain de vouloir supprimer ce joueur?</h3>
    <div>
        <h4 style="color:white">Joueur</h4>
        <hr />
        <dl class="row ">
            <dt style="color:white" class=" col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd style="color:white" class=" col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt style="color:white" class=" col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd style="color:white;" class=" col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt style="color:white" class=" col-sm-2">
                @Html.DisplayNameFor(model => model.ImageURL)
            </dt>
            <dd class="col-sm-10">
                <img? class="img-fluid" src="@Model.ImageURL" alt="@Model.Nom">
            </dd>
        </dl>

        <form asp-action="Delete">
            <input style="margin-bottom:20px; margin-left:40px;" type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
    </div>
</div>
