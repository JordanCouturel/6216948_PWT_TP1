@model EnfantVM

@{
    ViewData["Title"] = "Create";
}

<div class="bgcolor ">
    <div style="padding:30px;">
        <h1 style="color:white;">Create</h1>

        <h4 style="color:white;">Joueur</h4>
        <hr />
        <div class="row">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-6">
                    @* <input type="hidden" asp-for="@Model.Enfant.ParentId" />
                    <input type="hidden" asp-for="@Model.Enfant.Id" />*@
                    <div class="form-group " style="padding-bottom:15px;">
                        <label asp-for="@Model.Enfant.Nom" class="control-label"></label>
                        <input asp-for="@Model.Enfant.Nom" class="form-control mb-2" />
                        <span asp-validation-for="@Model.Enfant.Nom" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:15px;">
                        <label asp-for="@Model.Enfant.ImageURL" class="control-label"></label>
                        <input asp-for="@Model.Enfant.ImageURL" class="form-control  mb-2" />
                        <span asp-validation-for="@Model.Enfant.ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:15px;">
                        <label asp-for="@Model.Enfant.Description" class="control-label"></label>
                        <textarea id="summernote" asp-for="@Model.Enfant.Description" class="form-control  mb-2"></textarea>
                        <span asp-validation-for="@Model.Enfant.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:15px;">
                        <label asp-for="@Model.Enfant.NumeroDeChandail" class="control-label"></label>
                        <input asp-for="@Model.Enfant.NumeroDeChandail" class="form-control  mb-2" />
                        <span asp-validation-for="@Model.Enfant.NumeroDeChandail" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:15px;">
                        <label asp-for="@Model.Enfant.Age" class="control-label"></label>
                        <input asp-for="@Model.Enfant.Age" class="form-control  mb-2" />
                        <span asp-validation-for="@Model.Enfant.Age" class="text-danger"></span>
                    </div>
                    <div class="col-6">

                        <div class="form-group" style="padding-bottom:15px;">
                            <label asp-for="@Model.Enfant.Position" class="control-label"></label>
                            <select asp-for="@Model.Enfant.Position" class="form-control  mb-2" />

                            <option value="C" selected>C</option>
                            <option value="AG">AG</option>
                            <option value="AD">AD</option>
                            <option value="DD">DD</option>
                            <option value="DG">DG</option>
                            <option value="G">G</option>

                            </select>
                            <span asp-validation-for="@Model.Enfant.Position" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-bottom:15px;">
                            <label asp-for="@Model.Enfant.Salaire" class="control-label"> Salaire en M / année</label>
                            <input asp-for="@Model.Enfant.Salaire" class="form-control  mb-2" />
                            <span asp-validation-for="@Model.Enfant.Salaire" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-bottom:15px;">
                            <label asp-for="@Model.Enfant.ParentId" class="control-label">Équipe</label>
                            <select class="form-control form-select" asp-for="@Model.Enfant.ParentId" asp-items="@Model.ParentSelectList">
                                <option disabled selected>--Selectionner l'équipe--</option>
                            </select>
                            <span asp-validation-for="@Model.Enfant.ParentId" class="text-danger"></span>



                        </div>
                        <div class="form-group" style="padding-bottom:15px;">
                            <label asp-for="@Model.Enfant.EnVedette" class="control-label"></label>
                            <select asp-for="@Model.Enfant.EnVedette" class="form-control  mb-2" />

                            <option value="Peu importe" selected>Peu importe</option>
                            <option value="Oui">Oui</option>
                            <option value="Non">Non</option>

                            </select>
                            <span asp-validation-for="@Model.Enfant.EnVedette" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check " style="padding-bottom:15px;">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="@Model.Enfant.Favoris" /> @Html.DisplayNameFor(model => model.Enfant.Favoris)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
            </form>
        </div>

    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


