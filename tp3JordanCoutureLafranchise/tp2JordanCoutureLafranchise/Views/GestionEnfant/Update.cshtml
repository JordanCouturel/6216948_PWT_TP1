@model tp2JordanCoutureLafranchise.Models.Enfant

@{
    ViewData["Title"] = "Update";
}
<div class="bgcolor">
    <h1 style="color:white;">Create</h1>

    <h4 style="color:white;">Joueur</h4>
    <hr />
    <div class="row">

        <form asp-action="update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <input asp-for="Id" class="form-control" hidden />
                <div class="form-group">
                    <label asp-for="Nom" class="control-label"></label>
                    <input asp-for="Nom" class="form-control mb-2" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control  mb-2" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea id="summernote" asp-for="Description" class="form-control  mb-2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumeroDeChandail" class="control-label"></label>
                    <input asp-for="NumeroDeChandail" class="form-control  mb-2" />
                    <span asp-validation-for="NumeroDeChandail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control  mb-2" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="col-6">

                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <select asp-for="Position" class="form-control  mb-2" />

                        <option value="C" selected>C</option>
                        <option value="AG">AG</option>
                        <option value="AD">AD</option>
                        <option value="DD">DD</option>
                        <option value="DG">DG</option>
                        <option value="G">G</option>

                        </select>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salaire" class="control-label"> Salaire en M / année</label>
                        <input asp-for="Salaire" class="form-control  mb-2" />
                        <span asp-validation-for="Salaire" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipe" class="control-label"></label>
                        <select asp-for="Equipe" class="form-control  mb-2" />

                        <option value="Penguins de Pittsburgh" selected>Penguins de Pittsburgh</option>
                        <option value="Canadiens de Montréal">Canadiens de Montréal</option>
                        <option value="Capitals de Washington">Capitals de Washington</option>

                        </select>
                        <span asp-validation-for="Equipe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnVedette" class="control-label"></label>
                        <select asp-for="EnVedette" class="form-control  mb-2" />

                        <option value="Peu importe" selected>Peu importe</option>
                        <option value="Oui">Oui</option>
                        <option value="Non">Non</option>

                        </select>
                        <span asp-validation-for="EnVedette" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Favoris" /> @Html.DisplayNameFor(model => model.Favoris)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="update" class="btn btn-primary" />
                    </div>
                </div>
        </form>
    </div>



</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

